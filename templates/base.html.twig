						<ul class="list-unstyled">
							<li>
								<a href="{{ path('terminos_y_condiciones') }}">Términos y condiciones de venta</a>
							</li>
							<li>
								<a href="{{ path('terminos_de_uso') }}">Términos de uso</a>
							</li>
							<li>
								<a href="{{ path('politica_de_privacidad') }}">Política de privacidad</a>
							</li>
							<li>
								<a href="{{ path('politica_de_cookies') }}">Política de cookies</a>
							</li>
						</ul>

					</div>
					<!-- Grid column -->

				</div>
				<!-- Grid row -->

			</div>
			<!-- Footer Links -->

			<hr>

			<!-- Redes sociales -->
			<ul class="list-unstyled list-inline text-center">
				<li class="list-inline-item">
					<a class="btn-floating btn-tw mx-1" href="https://www.youtube.com/watch?v=HB3z_mMAUT0&feature=youtu.be" target="_blank"><img src="{{asset('assets/img/youtube-3-96.png')}}" alt="">
					</a>
				</li>
				<li class="list-inline-item">
					<a class="btn-floating btn-gplus mx-1" href="https://sites.google.com/uoc.edu/p3-10220-1-grupo-3j-f/presentaci%C3%B3n-del-proyecto" target="_blank"><img src="{{asset('assets/img/google-plus-3-96.png')}}" alt="">
