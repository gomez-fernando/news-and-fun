{% if services|length >= 1 %}
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nombre</th>
				<th scope="col">Categoría</th>
				<th scope="col">Descripción</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for service in services %}
				<tr>
					<th scope="row">
						<a title="Abrir" href="{{ path('service_detail', {'id':service.id}) }}">{{ service.name }}</a>
					</th>
					<td>
						{{ service.category.name }}
					</td>
					<td>
						{{ service.description }}
					</td>
					{# <td><a href="{{ service.urlService }}">Abrir</a></td> #}

					{% if app.user != null and service.user.id == app.user.id %}
						<td>
							<a href="{{ path('service_edit', {'id':service.id}) }}">Editar</a>
						</td>
						<td>
							<a href="{{ path('service_delete', {'id':service.id}) }}">Borrar</a>
						</td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
	<p>
		<strong>No tienes suscripciones registradas</strong>
	</p>
{% endif %}
