{% extends 'base.html.twig' %}

{% block title %}
{% if edit is defined %}
Editar suscripción
{% else %}
Añadir suscripción
{% endif %}
{% endblock %}

{% block body %}

<div class="example-wrapper">
  {% if edit is defined %}
  <h1 class="mt-2">Editar suscripción</h1>
  {% else %}
  <h1 class="mt-2">Añadir suscripción</h1>
  {% endif %}

  <form action="{{ path('service_creation') }}" method="POST">
    <div class="form-group">
      <label for="name">Nombre</label>
      <input type="text" value="" class="form-control" id="name" aria-describedby="name" name="_name" required>
    </div>
    <div class="form-group">
      <label for="description">Descripción</label>
      <input type="text" value="" class="form-control" id="description" aria-describedby="description"
        name="_description" required>
    </div>
    <div class="form-group">
      <label for="categories">Categoría</label>
      <select class="form-control" name="_category" id="categories" required>
        <option value="">Categoría</option>
        {% for category in categories %}
        <option value="{{ category.id }}">{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group">
      <label for="country">País</label>
      <input type="text" value="" class="form-control" id="country" aria-describedby="country" name="_country" required>
    </div>
    <div class="form-group">
      <label for="url_service">Dirección web</label>
      <input type="text" value="" class="form-control" id="url_service" aria-describedby="url_service"
        name="_url_service" required>
    </div>
    <button type="submit" class="btn btn-primary mr-5">Guardar</button>



</div>
{% endblock %}